<div class="profile-screen">
    <div class="flex-profile">
        <div class="image-btn">
            <div class="image">
                <svg>
                    <use xlink:href="/main.svg#profile-svg"></use>
                </svg>
            </div>
            <div class="btn" onclick="editInfo()">
                <svg>
                    <use xlink:href="/main.svg#pencil-svg"></use>
                </svg>
                <span>Edit profile</span>
            </div>
        </div>
        <form method="POST" action="/profile/edit" class="info">
            <h3>Your login:</h3>
            <input type="text" value="<%=locals.info.login%>" disabled>
            <h3>Your firstname:</h3>
            <input type="text" name="firstname" value="<%=locals.info.firstname%>" disabled>
            <h3>Your lastname:</h3>
            <input type="text" name="lastname" value="<%=locals.info.lastname%>" disabled>
            <h3>Your address:</h3>
            <input type="text" name="address" value="<%=locals.info.address%>" disabled>
            <br>
            <div class="confirm">
                <button>
                    <svg>
                        <use xlink:href="/main.svg#confirm-svg"></use>
                    </svg>
                    <span>Confirm</span>
                </button>
                <div class="cancel" onclick="cancelEdit()">
                    <svg>
                        <use xlink:href="/main.svg#close-svg"></use>
                    </svg>
                    <span>Cancel</span>
                </div>
            </div>
        </form>
    </div>
    <div class="flex-href">
        <a href="">
            <svg>
                <use xlink:href="/main.svg#cart-svg"></use>
            </svg>
            <span>Your cart</span>
        </a>
        <a href="/profile/favorite">
            <svg>
                <use xlink:href="/main.svg#love-svg"></use>
            </svg>
            <span>Your favorite</span>
        </a>
        <a href="">
            <svg>
                <use xlink:href="/main.svg#order-svg"></use>
            </svg>
            <span>Your orders</span>
        </a>
    </div>
</div>

<script>
    function editInfo(){
        const formActive = document.querySelector('.info')
        formActive.querySelector('input[name="firstname"]').disabled = false
        formActive.querySelector('input[name="lastname"]').disabled = false
        formActive.querySelector('input[name="address"]').disabled = false
        document.querySelector('.confirm').classList.add('show')
    }

    function cancelEdit(){
        const formActive = document.querySelector('.info')
        formActive.querySelector('input[name="firstname"]').disabled = true
        formActive.querySelector('input[name="lastname"]').disabled = true
        formActive.querySelector('input[name="address"]').disabled = true
        document.querySelector('.confirm').classList.remove('show')
    }
</script>