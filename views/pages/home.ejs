<div class="home-page">
    <div class="sorting-menu">
        <a href="?by=1">Ароматы для дома</a>
        <hr width="1">
        <a href="?by=2">Женская парфимерия</a>
        <hr width="1">
        <a href="?by=3">UNISEX</a>
        <hr width="1">
        <a href="?by=4">Селективная парфимерия</a>
    </div>
    <div class="item-block">
        <%for (let i = 0; i < locals.items.length; i++) {
            let favoriteVar = ""
            let cartItem = ""
            if (locals.favorite){
                for (let ii = 0; ii < locals.favorite.length; ii++){
                    if (locals.favorite[ii].id_item == locals.items[i].id){
                        favoriteVar = "active"
                    }
                }
            }
            if(locals.cart){
                for (let iii = 0; iii < locals.cart.length; iii++){
                    if (locals.cart[iii].id_item == locals.items[i].id){
                        cartItem = "active"
                    }
                }
            }
            
        %>
        <div class="item">
            <img src="data:image/png;base64,<%=locals.items[i].img %>">
            <a href="/item?id=<%=locals.items[i].id%>&type=<%=locals.items[i].type%>"><%=locals.items[i].title%></a>
            <div class="flex-btn">
                <span id="<%=locals.items[i].id%>" class="<%=favoriteVar%>" onclick="inFavorite(this)">
                    <svg>
                        <use xlink:href="/main.svg#love-svg"></use>
                    </svg>
                </span>
                <h3><%=locals.items[i].price%> ₽</h3>
                <div class="cart <%=cartItem%>" id="<%=locals.items[i].id%>" onclick="inCart(this)">В корзину</div>
            </div>
        </div>
        <%}%>
    </div>
</div>